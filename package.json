{
  "name": "angular-material-electron",
  "version": "4.0.0",
  "description": "Angular + Material + Electron (Typescript, SASS, Hot Reload & Builder)",
  "homepage": "https://github.com/1nv1n/angular-material-electron.git",
  "author": {
    "name": "1nv1n",
    "email": ""
  },
  "keywords": [
    "angular",
    "angular 6",
    "angular material",
    "electron",
    "electron builder",
    "material",
    "typescript",
    "sass"
  ],
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "npx electron-builder install-app-deps",
    "ng": "ng",
    "start": "npm-run-all -p ng:serve electron:serve",
    "build": "npm run electron:tsc && ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "ng serve --port 1337",
    "ng:serve-open": "ng serve -o --port 1337",
    "electron:tsc": "tsc main.ts",
    "electron:serve": "wait-on http-get://localhost:1337/ && npm run electron:tsc && electron . --serve",
    "electron:local": "npm run build:prod && electron .",
    "electron:linux": "npm run build:prod && npx electron-builder build --linux",
    "electron:windows": "npm run build:prod && npx electron-builder build --windows",
    "electron:mac": "npm run build:prod && npx electron-builder build --mac",
    "test": "ng test",
    "e2e": "ng e2e",
    "lint": "tslint -c ./tslint.json \"./src/**/*.ts\" -e \"./src/**/typings.d.ts\" -e \"./src/environments/**\""
  },
  "dependencies": {
    "@angular/animations": "6.0.6",
    "@angular/cdk": "6.3.1",
    "@angular/material": "6.3.1",
    "hammerjs": "2.0.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.6.8",
    "@angular/cli": "6.0.8",
    "@angular/common": "6.0.6",
    "@angular/compiler": "6.0.6",
    "@angular/compiler-cli": "6.0.6",
    "@angular/core": "6.0.6",
    "@angular/forms": "6.0.6",
    "@angular/http": "6.0.6",
    "@angular/language-service": "6.0.6",
    "@angular/platform-browser": "6.0.6",
    "@angular/platform-browser-dynamic": "6.0.6",
    "@angular/router": "6.0.6",
    "@ngx-translate/core": "10.0.2",
    "@ngx-translate/http-loader": "3.0.1",
    "@types/jasmine": "2.8.8",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "10.5.0",
    "codelyzer": "4.4.2",
    "core-js": "2.5.7",
    "electron": "2.0.3",
    "electron-builder": "20.17.0",
    "electron-reload": "1.2.3",
    "jasmine-core": "3.1.0",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "2.0.4",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "2.0.1",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "1.1.0",
    "npm-run-all": "4.1.3",
    "npx": "10.2.0",
    "protractor": "5.3.2",
    "rxjs": "6.2.1",
    "ts-node": "7.0.0",
    "tslint": "5.10.0",
    "typescript": "2.7.2",
    "wait-on": "2.1.0",
    "webdriver-manager": "12.0.6",
    "zone.js": "0.8.26"
  }
}
